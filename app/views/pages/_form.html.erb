<div data-controller="filter" data-filter-url="<%= select_filter_path %>" >
	<div class="titre_etiquette">Situation actuelle :</div>
	<div class="d12"></div>
	<%= form_with(url: search_grilles_path, method: :post) do |f|%>
	<div class="titre_etiquette">Agent</div>
	<div class="align_flex w100" >
		<div class="w3">
			<div class="texte_etiquette">Corps de l'agent*</div>
			<div class="form"><%= f.select :corps, @corps.map {|c| [c,c]},{prompt: "Select"}, {data: {action: 'change->filter#corpsChange' }}%></div>
		</div>
		<div class="w3 pcenter">
			<div class="texte_etiquette">Grade de l'agent*</div>
			<div class="form"><%= f.select :grade, [["",nil]],{}, {data: {action: 'change->filter#gradesChange','filter-target': 'gradeId'}}%></div>
		</div>
		<div class="w3">
			<div class="texte_etiquette">Age de l'agent*</div>
			<div class="form"><%= f.select :age, (22..60).to_a.map { |a| [a,a]},required: true%></div>
		</div>
	</div>
	<div class="align_flex w100">
		<div class="w50 pr">
			<div class="texte_etiquette">Echelon*</div>
			<div class="form"><%= f.select :echelon, [["",nil]],{}, {data: {action: 'change->filter#echelonsChange','filter-target': 'echelonId'}}%></div>
		</div>
		<div class="w50 pl">
			<div class="texte_etiquette">Durée passée à cet échelon*</div>
			<div class="form"><%= f.select :duree, [["",nil]],{},{data: {'filter-target': 'dureeId'}}%></div>
		</div>
	</div>
	<div class="d12"></div>
	<div class="titre_etiquette">Emploi fonctionnel</div>
	<div class="d12"></div>
	<div>
		<div class="texte_etiquette">Nature de l'emploi fonctionnel éventuellement exercé</div>
		<div class="form"><%= f.select :type_emploi, [["aucun","non fonctionnel"],["emploi1","emploi1"]],required: true%></div>
	</div>
	<div class="d12"></div>
	<div class="align_flex w100">
		<div class="w3">
			<div class="texte_etiquette">Echelon emploi*</div>
			<div class="form"><%= f.select :echelon_emploif, [["1",1],["2",2]]%></div>
		</div>
		<div class="w3 pcenter">
			<div class="texte_etiquette">Début*</div>
			<div class="form"><%= f.select :duree_emploif, [["2022",1],["2023",2]]%></div>
		</div>
		<div class="w3">
			<div class="texte_etiquette">Fin prévue*</div>
			<div class="form"><%= f.select :fin_emploif, [["2022",1],["2023",2]]%></div>
		</div>
	</div>
	<div class="d24"></div>
	<div class="titre_etiquette">Projections futures :</div>
	<div class="d12"></div>
	<div class="texte_etiquette">Année projetée de promotion:</div>
	<div class="align_flex w100">
		<div class="w3">
			<div class="texte_etiquette">Grade 2</div>
			<div class="form"><%= f.select :grade2, [["",nil],["2022",1],["2023",2]]%></div>
		</div>
		<div class="w3 pcenter">
			<div class="texte_etiquette">Grade 3</div>
			<div class="form"><%= f.select :grade3, [["",nil],["2023",2]]%></div>
		</div>
		<div class="w3">
			<div class="texte_etiquette">Grade 4</div>
			<div class="form"><%= f.select :grade4, [["",nil],["2023",2]]%></div>
		</div>
	</div>
	<div class="d24"></div>
	<div><%= f.submit "Valider", class: "bouton" %></div>

	<% end %>

	
</div>
